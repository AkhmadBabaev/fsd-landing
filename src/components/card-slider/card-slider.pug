mixin card-slider({ images })

  .card-slider.js-card-slider.swiper-container
    .swiper-wrapper

      each image in images
        .card-slider__slide.swiper-slide
          img(src = image.url, alt = image.alt)

    .card-slider__pagination.swiper-pagination

    .card-slider__button-prev
      svg.card-slider__button-prev-icon(width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg")
        path(
          d = "M7.42188 11.0928L6.01563 12.499L0.0156253 6.49902L6.01563 0.499024L7.42188 1.90527L2.82813 6.49902L7.42188 11.0928Z"
          fill = "white")

    .card-slider__button-next
      svg.card-slider__button-next-icon(width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg")
        path(
          d = "M7.42188 11.0928L6.01563 12.499L0.0156253 6.49902L6.01563 0.499024L7.42188 1.90527L2.82813 6.49902L7.42188 11.0928Z"
          fill = "white")
