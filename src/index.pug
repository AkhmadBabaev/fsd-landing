extends components/page/page
include components/card/card

block append variables
  - const title = 'FSD landing';

block append head
  link(rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.min.css")

  if isProdEnv
    link(rel = "stylesheet" href = "index.bundle.css")

block append scripts
  script(src = "index.bundle.js")

block append page-content
  - const data = require('./data.json');

  each card in data.cards
    +card({
      id: card.id,
      price: card.price,
      stars: card.stars,
      reviews: card.reviews,
      images: card.images
    })
